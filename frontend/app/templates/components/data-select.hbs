<form class="form-horizontal data-select">
	{{#each dataPart}}
		<div class="form-group data-select-item">
			<label for="{{unbound this.randomId}}" class="col-sm-2 control-label">
				{{this.name}}
			</label>
			<div class="col-sm-10">
				{{input type="checkbox" id=this.randomId}}
				{{#if this.children.length}}
					<a href='#' class='expand-link' id="link-{{unbound this.randomId}}" {{action 'expandClicked' this.randomId target=view}}>Expand</a>
					{{data-select-children data=this.children parentId=this.randomId}}
				{{/if}}
			</div>
		</div>
	{{/each}}

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button class="btn btn-success" {{action selectData this}}>{{this.buttonText}}</button>
		</div>
	</div>
</form>
