<form class="form-horizontal">
	<div class="form-group">
		<label for="type" class="col-sm-2 control-label">Type</label>
		<div class="col-sm-10">
			{{view "select" content=controller.validHttpTypes value=type}}
		</div>
	</div>
	<div class="form-group">
		<label for="url" class="col-sm-2 control-label">URL</label>
		<div class="col-sm-10">
			{{input type='text' value=url placeholder="Enter a URL" id='url' class="form-control"}}
			<span class="help-block">Specify an API endpoint that responds with the data you would like to add.</span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button {{action 'submitUrl'}} class="btn btn-success">Submit URL</button>
		</div>
	</div>
</form>

{{#if showStepTwo}}

	{{#with randomId as textareaId}}
		<label for="{{unbound randomId}}">Raw Response</label>
		{{textarea value=rawResponseString class="form-control" rows="4" id=textareaId}}
	{{/with}}
	
	<div class="big-info bg-info">Above is the raw response back from the endpoint. Please select what fields you would like to use.</div>

	{{data-select data=controller.rawResponse selectData="selectData" buttonText="Make Selection"}}
{{/if}}

{{#if showStepThree}}
	<div class="big-info bg-info">Last bit of information. What would you like to call this data source; How often would you like it polled?</div>
	<form class="form-horizontal">
		<div class="form-group">
			<label for="name" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				{{input type='text' value=name placeholder="What would you like to name this data source?" id="name" class="form-control"}}
			</div>
		</div>
		<div class="form-group">
			<label for="polling-interval" class="col-sm-2 control-label">Polling Interval</label>
			<div class="col-sm-10">
				{{view "select" content=controller.validPollingIntervals optionValuePath="content.value" optionLabelPath="content.name" value=pollingInterval}}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button {{action 'createDataModel'}} class="btn btn-success">Add Data</button>
			</div>
		</div>
	</div>
{{/if}}
