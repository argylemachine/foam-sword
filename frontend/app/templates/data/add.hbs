<form class="form-horizontal">
	<div class="form-group">
		<label for="type" class="col-sm-2 control-label">Type</label>
		<div class="col-sm-10">
			{{view "select" content=controller.validHttpTypes value=type}}
		</div>
	</div>
	<div class="form-group">
		<label for="url" class="col-sm-2 control-label">URL</label>
		<div class="col-sm-10">
			{{input type='text' value=url placeholder="Enter a URL" id='url' class="form-control"}}
			<span class="help-block">Specify an API endpoint that responds with the data you would like to add.</span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button {{action 'submitUrl'}} class="btn btn-success">Submit URL</button>
		</div>
	</div>
</form>

{{#if showStepTwo}}

	{{#with randomId as textareaId}}
		<label for="{{unbound randomId}}">Raw Response</label>
		{{textarea value=rawResponseString class="form-control" rows="4" id=textareaId}}
	{{/with}}

	{{data-select data=controller.rawResponse selectData="selectData"}}
{{/if}}
